{
  "name": "codi-test-framework",
  "version": "1.0.30",
  "description": "A simple test framework for JavaScript",
  "type": "module",
  "main": "src/_codi.js",
  "bin": {
    "codi": "cli.js"
  },
  "scripts": {
    "tests": "node --watch-path=./tests --watch-path=./src --experimental-test-module-mocks cli.js tests --returnResults",
    "test_web": "bun --bun ./tests/webfunction.js",
    "version": "bun --bun cli.js --version"
  },
  "keywords": [
    "test",
    "framework",
    "javascript"
  ],
  "author": "Rob Hurst",
  "license": "MIT",
  "dependencies": {
    "bun-bagel": "^1.1.0",
    "chalk": "^5.3.0",
    "figlet": "^1.7.0",
    "undici": "^7.3.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "prettier": "^3.4.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
